<%= form_with url: settings_path, method: :patch,
    data: {
      turbo_stream: true
    },
    id: "settings-form",
    class: "space-y-4 lg:space-y-6" do |form| %>

  <%= form.hidden_field :verse_id,
                    value:
                      params[:verse_id] ||
                        (request.referer&.match(%r{verses/(\d+)}) && $1) %>

  <div id="settings-form" class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-6">
    <!-- Greek Word -->
    <label
      class="
        flex items-center space-x-3 p-3 lg:p-4 bg-gray-700 rounded-lg border
        border-gray-600 hover:border-blue-400 transition-colors cursor-pointer
      "
    >
      <%= form.check_box :show_greek,
                     {
                       checked: (settings || @settings)["show_greek"],
                       class:
                         "w-5 h-5 lg:w-6 lg:h-6 text-blue-600 bg-gray-600 border-gray-500 rounded focus:ring-blue-500",
                     },
                     "true",
                     "false" %>
      <div>
        <span class="text-base lg:text-lg font-semibold text-sky-300">
          <%= t("settings.show_greek") %>
        </span>
        <p class="text-sm lg:text-base text-gray-400">
          <%= t("settings.show_greek_desc") %>
        </p>
      </div>
    </label>
    <!-- Hebrew Word -->
    <label
      class="
        flex items-center space-x-3 p-3 lg:p-4 bg-gray-700 rounded-lg border
        border-gray-600 hover:border-blue-400 transition-colors cursor-pointer
      "
    >
      <%= form.check_box :show_hebrew,
                     {
                       checked: (settings || @settings)["show_hebrew"],
                       class:
                         "w-5 h-5 lg:w-6 lg:h-6 text-blue-600 bg-gray-600 border-gray-500 rounded focus:ring-blue-500",
                     },
                     "true",
                     "false" %>
      <div>
        <span class="text-base lg:text-lg font-semibold text-orange-300">
          <%= t("settings.show_hebrew") %>
        </span>
        <p class="text-sm lg:text-base text-gray-400">
          <%= t("settings.show_hebrew_desc") %>
        </p>
      </div>
    </label>
    <!-- Spanish Translation -->
    <label
      class="
        flex items-center space-x-3 p-3 lg:p-4 bg-gray-700 rounded-lg border
        border-gray-600 hover:border-blue-400 transition-colors cursor-pointer
      "
    >
      <%= form.check_box :show_spanish,
                     {
                       checked: (settings || @settings)["show_spanish"],
                       class:
                         "w-5 h-5 lg:w-6 lg:h-6 text-blue-600 bg-gray-600 border-gray-500 rounded focus:ring-blue-500",
                     },
                     "true",
                     "false" %>
      <div>
        <span class="text-base lg:text-lg font-semibold text-white">
          <%= t("settings.show_spanish") %>
        </span>
        <p class="text-sm lg:text-base text-gray-400">
          <%= t("settings.show_spanish_desc") %>
        </p>
      </div>
    </label>
    <!-- Strong's Numbers -->
    <label
      class="
        flex items-center space-x-3 p-3 lg:p-4 bg-gray-700 rounded-lg border
        border-gray-600 hover:border-blue-400 transition-colors cursor-pointer
      "
    >
      <%= form.check_box :show_strongs,
                     {
                       checked: (settings || @settings)["show_strongs"],
                       class:
                         "w-5 h-5 lg:w-6 lg:h-6 text-blue-600 bg-gray-600 border-gray-500 rounded focus:ring-blue-500",
                     },
                     "true",
                     "false" %>
      <div>
        <span class="text-base lg:text-lg font-semibold text-yellow-400">
          <%= t("settings.show_strongs") %>
        </span>
        <p class="text-sm lg:text-base text-gray-400">
          <%= t("settings.show_strongs_desc") %>
        </p>
      </div>
    </label>
    <!-- Grammar Information -->
    <label
      class="
        flex items-center space-x-3 p-3 lg:p-4 bg-gray-700 rounded-lg border
        border-gray-600 hover:border-blue-400 transition-colors cursor-pointer
      "
    >
      <%= form.check_box :show_grammar,
                     {
                       checked: (settings || @settings)["show_grammar"],
                       class:
                         "w-5 h-5 lg:w-6 lg:h-6 text-blue-600 bg-gray-600 border-gray-500 rounded focus:ring-blue-500",
                     },
                     "true",
                     "false" %>
      <div>
        <span class="text-base lg:text-lg font-semibold text-gray-300">
          <%= t("settings.show_grammar") %>
        </span>
        <p class="text-sm lg:text-base text-gray-400">
          <%= t("settings.show_grammar_desc") %>
        </p>
      </div>
    </label>
    <!-- Pronunciation -->
    <label
      class="
        flex items-center space-x-3 p-3 lg:p-4 bg-gray-700 rounded-lg border
        border-gray-600 hover:border-blue-400 transition-colors cursor-pointer
      "
    >
      <%= form.check_box :show_pronunciation,
                     {
                       checked: (settings || @settings)["show_pronunciation"],
                       class:
                         "w-5 h-5 lg:w-6 lg:h-6 text-blue-600 bg-gray-600 border-gray-500 rounded focus:ring-blue-500",
                     },
                     "true",
                     "false" %>
      <div>
        <span class="text-base lg:text-lg font-semibold text-purple-300">
          <%= t("settings.show_pronunciation") %>
        </span>
        <p class="text-sm lg:text-base text-gray-400">
          <%= t("settings.show_pronunciation_desc") %>
        </p>
      </div>
    </label>
    <!-- Word Order -->
    <label
      class="
        flex items-center space-x-3 p-3 lg:p-4 bg-gray-700 rounded-lg border
        border-gray-600 hover:border-blue-400 transition-colors cursor-pointer
      "
    >
      <%= form.check_box :show_word_order,
                     {
                       checked: (settings || @settings)["show_word_order"],
                       class:
                         "w-5 h-5 lg:w-6 lg:h-6 text-blue-600 bg-gray-600 border-gray-500 rounded focus:ring-blue-500",
                     },
                     "true",
                     "false" %>
      <div>
        <span class="text-base lg:text-lg font-semibold text-gray-400">
          <%= t("settings.show_word_order") %>
        </span>
        <p class="text-sm lg:text-base text-gray-400">
          <%= t("settings.show_word_order_desc") %>
        </p>
      </div>
    </label>
  </div>

<% end %>
